% Cagan Model - Stochastic 
%
% Nicola Viegi
% Pretoria, 2010

%----------------------------------------------------------------
% 0. Housekeeping (close all graphic windows)
%----------------------------------------------------------------

close all;

%----------------------------------------------------------------
% 1. Defining variables
%----------------------------------------------------------------

var p m;
varexo e;

parameters eta, rho;

%----------------------------------------------------------------
% 2. Calibration
%----------------------------------------------------------------

eta   = 0.33;
rho = 0.8;


%----------------------------------------------------------------
% 3. Model
%----------------------------------------------------------------

model; 
p = (1/(1+eta))*m + (eta/(1+eta))*p(+1);
m = rho*m(-1) + e;
end;

%----------------------------------------------------------------
% 4. Computation
%----------------------------------------------------------------

initval;
  p = 0;
  m = 0;
  e = 0;
  end;


shocks;
var e ; periods 5:10;
values 0.1;
end;

check;

steady; % Check the Blanchard Kahn Condition

simul(periods=20); 

